<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyOrders">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="60dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_border"
            android:checkedButton="@id/rbtnUpcoming"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <RadioButton
                android:id="@+id/rbtnUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_orange"
                android:button="@null"
                android:gravity="center"
                android:text="Upcoming"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rbtnHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_white"
                android:button="@null"
                android:gravity="center"
                android:text="History"
                android:textColor="@color/principal" />


        </RadioGroup>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="4"
                app:rowCount="3">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/strurbucks"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_row="0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="1"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0">


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="#264100"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/principal"
                    android:textSize="20dp"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_row="0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    app:layout_column="1"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3 Items"

                        android:textColor="@color/gris"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableRight="@drawable/ic_verified"
                        android:drawablePadding="5dp"
                        android:text="Starbucks"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_column="2"
                        app:layout_row="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="0"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp"
                        android:text="Estimated Arrival"
                        android:textColor="@color/gris"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="25 min"
                        android:textColor="@color/black"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        app:layout_column="2"
                        app:layout_row="0" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="2"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="90dp"
                        android:paddingRight="10dp"
                        android:text="Now"
                        android:textColor="@color/gris"
                        app:layout_column="1"
                        app:layout_row="0"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="90dp"
                        android:drawablePadding="5dp"
                        android:paddingRight="8dp"
                        android:text="Food on the way"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_column="2"
                        app:layout_row="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="0"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="2">


                    <Button
                        android:id="@+id/btnCancelOrder"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/white"
                        android:elevation="20dp"
                        android:text="Cancel"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_column="2"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="2"
                    app:layout_gravity="center_vertical"
                    app:layout_row="2">


                    <Button
                        android:id="@+id/btntrackorder"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:elevation="30dp"
                        android:text="Track Order" />

                </LinearLayout>


            </androidx.gridlayout.widget.GridLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lasted Orders"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="15dp"
                    android:paddingLeft="12dp"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>