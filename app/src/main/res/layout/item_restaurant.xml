<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cdCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/mcdonals"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imgValoration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        app:srcCompat="@drawable/valoracion"
                        tools:ignore="MissingConstraints"

                        tools:layout_editor_absoluteY="11dp" />

                    <ImageView
                        android:id="@+id/imgHead"
                        android:layout_width="wrap_content"
                        android:layout_height="73dp"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/head"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="216dp"
                        tools:layout_editor_absoluteY="18dp" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    >

                    <TextView
                        android:id="@+id/tvNameRestaurant"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableEnd="@drawable/ic_verified"
                        android:paddingLeft="25dp"
                        android:text="McDonald's"
                        android:textStyle="bold"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/repartidor"
                            android:drawablePadding="10dp"
                            android:paddingLeft="25dp"
                            android:text="Free delivery"
                            android:textColor="@color/repatidor_reloj" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/reloj"
                            android:drawablePadding="10dp"
                            android:text="10-15 mins"
                            android:textColor="@color/repatidor_reloj"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="25dp"
                        >

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="BURGER"
                            android:background="@drawable/rounded_gray_background"
                            android:textColor="@color/Color_Restaurant" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_gray_background"
                            android:text="CHICKEN"
                            android:textColor="@color/Color_Restaurant" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_gray_background"
                            android:text="FAST FOOD"
                            android:textColor="@color/Color_Restaurant"

                            />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
    </androidx.cardview.widget.CardView>

